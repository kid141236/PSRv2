<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#8a70c2"
    android:padding="10dp" >

    <WebView android:id="@+id/webview" android:layout_width="500dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="200dp"
        android:layout_above="@+id/back"
        android:layout_below="@+id/buttonSaveHighScore">

    </WebView>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/main"
        android:id="@+id/back"
        android:scaleType="fitXY"
        android:background="#0000"
        android:layout_x="85dp"
        android:layout_y="361dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSaveHighScore" android:text="Save your Score"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textViewHighScore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Button>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="key in your name"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/editTextUsername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHighScore"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        android:layout_below="@+id/editTextUsername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:textColor="#ffffff" />
</RelativeLayout>